{% extends 'back.html.twig' %}

{% block page_title %} Dashboard {% endblock %}

{% block beadcrumb %} Dashboard {% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Main row -->
    <div class="row">
        <!-- Left col -->
        <div class="col-md-8">
        <!-- TABLE: LATEST ORDERS -->
        <div class="card">
            <div class="card-header border-transparent">
            <h3 class="card-title">Latest Orders</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
                </button>
            </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom client</th>
                    <th>Date</th>
                    <th>Etat</th>
                </tr>
                </thead>
                <tbody>
                {% for commande in commandes %}
                <tr>
                    <td><a href="#">{{commande.id}}</a></td>
                    <td>{{commande.client.nomComplet}}</td>
                    <td>{{commande.commandedAt|date('d-m-Y')}}</td>
                    <td>
                    <span 
                        {% if commande.etat == 'En cours' %}
                            class="badge bg-warning"
                        {% elseif commande.etat == 'Prete' %}
                            class="badge bg-success"
                        {% else %}
                            class="badge bg-danger"
                        {% endif %}
                        >
                        {{commande.etat}}
                    </span>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
            </div>
            <!-- /.card-body -->
            <div class="card-footer clearfix">
            <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">Place New Order</a>
            <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">View All Orders</a>
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
        </div>
        <!-- /.col -->

        <div class="col-md-4">
        <!-- Info Boxes Style 2 -->
        <div class="info-box mb-3 bg-warning">
            <span class="info-box-icon"><i class="fas fa-money-check-alt"></i></span>

            <div class="info-box-content">
            <span class="info-box-text">Nombre de commandes de la journee</span>
            <span class="info-box-number">5,200</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
        <div class="info-box mb-3 bg-success">
            <span class="info-box-icon"><i class="fas fa-check-square"></i></span>

            <div class="info-box-content">
            <span class="info-box-text">Nombre de commandes validees</span>
            <span class="info-box-number">{{commandeValide}} commande(s)</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
        <div class="info-box mb-3 bg-danger">
            <span class="info-box-icon"><i class="fas fa-funnel-dollar"></i></span>

            <div class="info-box-content">
            <span class="info-box-text">Recettes Journalieres</span>
            <span class="info-box-number">{{revenu}} F CFA</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
        <div class="info-box mb-3 bg-info">
            <span class="info-box-icon"><img class="animation__wobble rounded-circle" src="{{asset("assets/img/menus/")}}{{menuPlusVendu.image}}"></span>

            <div class="info-box-content">
            <span class="info-box-text">Menu le plus vendu</span>
            <span class="info-box-number">{{menuPlusVendu.libelle}}</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        
        <div class="info-box mb-3 bg-warning">
            <span class="info-box-icon"><i class="fas fa-window-close"></i></span>

            <div class="info-box-content">
            <span class="info-box-text">Nombre de commandes annulees de la journee</span>
            <span class="info-box-number">{{commandeInvalide}} commande(s)</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        
        <!-- /.info-box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    </div><!--/. container-fluid -->
{% endblock %}